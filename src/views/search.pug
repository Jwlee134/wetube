extends layouts/main.pug
include mixins/videoBlock

block content
    .search__header
        h3 Searching for: #{searchingBy}
        if videos.length === 0
            h5 No Videos Found :(
    .search__videos
        each video in videos
            +videoBlock({
                id:video.id,
                title:video.title,
                views:video.views,
                videoFile:video.fileUrl,
                creator:video.creator.name,
                avatar:video.creator.avatarUrl,
                date:moment(video.createAt).format('YYYY. MM. DD')
            })