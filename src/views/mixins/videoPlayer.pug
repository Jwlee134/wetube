mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                progress#progress(value="0", min="0")
            .videoPlayer__column
                span
                    span#currentTime 0:00
                    span  / 
                    span#totalTime 0:00
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="1")
                span#jsVolumeBtn
                    i.fas.fa-volume-up
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand